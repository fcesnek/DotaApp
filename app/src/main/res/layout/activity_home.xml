<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/tournamentListButton"
        android:layout_margin="70dp"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:text="@string/list_tournaments"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/matchesListButton"
        android:layout_margin="20dp"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:textSize="20dp"
        android:text="@string/list_matches"
        app:layout_constraintTop_toBottomOf="@+id/tournamentListButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
    
    <Button
        android:id="@+id/savedMatchesButton"
        android:layout_margin="60dp"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:textSize="20dp"
        android:text="@string/saved_matches"
        app:layout_constraintTop_toBottomOf="@+id/matchesListButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/savedTourneysButton"
        android:layout_margin="20dp"
        android:layout_width="200sp"
        android:layout_height="100sp"
        android:textSize="20dp"
        android:text="@string/saved_tournaments"
        app:layout_constraintTop_toBottomOf="@+id/savedMatchesButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>